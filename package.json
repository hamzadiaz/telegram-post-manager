{
  "name": "reels-downloader-bot",
  "version": "1.0.0",
  "description": "Firebase Functions for Telegram bot that downloads Instagram reels and generates AI captions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0",
    "instagram-url-direct": "^2.0.7",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.0",
    "@types/node-telegram-bot-api": "^0.64.11",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.2.0"
  },
  "private": true
}
